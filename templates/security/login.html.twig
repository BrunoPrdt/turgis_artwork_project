{% extends'base.html.twig' %}
{% block title 'Se connecter' %}
{% block body %}
    <section class="vert">
        <div class="container-fluid backgroundBruno">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata, 'security') }}</div>
            {% endif %}

            <div class="container-fluid backgroundB">
                <div class="row">
                    <div class="col">
                        <h1 class="text-center text-black ">Se connecter </h1>
                    </div>
                </div>
            </div>

            
            <div class="container">
                <div class="row my-5 text-center">
                    <div class="col-md-1"></div>

                    <div class="col-md-10 col-md-offset-2 text-center">

                        <form action="{{ path('login') }}" method="post">

                            <div class="form-group text-center my-5">
                                <label for="username">Adresse email</label>
                                <input class="form-control" type="text" id="username" name="_username" value="demo.admin@graphicalArt.com">
                            </div>

                            <div class="form-group text-center my-5">
                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" name="_password" class="form-control" value="superadmin">
                            </div>

                            <div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}">
                            </div>

                            <div class="row ml-1 pt-5">
                                <button type="submit" class="btn btn-secondary my-3">Se connecter</button>
                            </div>

                        </form>
                    </div>

                </div>
            </div>

        </div>
    </section>

{% endblock %}