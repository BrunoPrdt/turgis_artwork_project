{% extends 'base.html.twig' %}

{% block title %}Détail de l'article{% endblock %}

{% block body %}

    <div class="container-fluid backgroundBruno">
        <h1 class="titleAdmin">Fiche complète</h1>

        <table class="table">
            <tbody class="tableWhite">
            <tr>
                <th>Id</th>
                <td>{{ painting.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ painting.type }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ painting.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ painting.description }}</td>
            </tr>
            <tr>
                <th>Chemin source</th>
                <td>{{ painting.img }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ painting.category }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-secondary" href="{{ path('painting_index') }}">Retour à la liste</a>

        <a class="btn btn-primary" href="{{ path('painting_edit', {'id': painting.id}) }}">Editer</a>

        {{ include('admin/painting/_delete_form.html.twig') }}
    </div>

{% endblock %}
